def display_title_screen():
	print("\n" * 10)
	print("#############################")
	print("# Welcome to the Adventure! #")
	print("#############################")
	print("\n")
	print("1. Start game")
	print("2. Quit")
	option = int(input("Choose an option: "))
	if option == 1:
		start_game()
	elif option == 2:
		quit()

def start_game():
	print("\n" * 10)
	print("You find yourself in a dark forest.")
	print("You can see a light in the distance.")
	print("Do you want to go towards the light or explore the forest?")
	print("1. Go towards the light")
	print("2. Explore the forest")
	option = int(input("Choose an option: "))
	if option == 1:
		go_towards_light()
	elif option == 2:
		explore_forest()

def go_towards_light():
	print("\n" * 10)
	print("You start walking towards the light.")
	print("As you get closer, you see that it's coming from a small cottage.")
	print("Do you want to go inside the cottage or continue walking?")
	print("1. Go inside the cottage")
	print("2. Continue walking")
	option = int(input("Choose an option: "))
	if option == 1:
		go_inside_cottage()
	elif option == 2:
		continue_walking()

def explore_forest():
	print("\n" * 10)
	print("You start exploring the forest.")
	print("After a while, you come across a river.")
	print("Do you want to follow the river or go back to the cottage?")
	print("1. Follow the river")
	print("2. Go back to the cottage")
	option = int(input("Choose an option: "))
	if option == 1:
		follow_river()
	elif option == 2:
		go_back_to_cottage()

def go_inside_cottage():
	print("\n" * 10)
	print("You go inside the cottage.")
	print("You see an old man sitting by the fire.")
	print("Do you want to talk to the old man or leave the cottage?")
	print("1. Talk to the old man")
	print("2. Leave the cottage")
	option = int(input("Choose an option: "))
	if option == 1:
		talk_to_old_man()
	elif option == 2:
		leave_cottage()

def continue_walking():
	print("\n" * 10)
	print("You continue walking.")
	print("After a while, you come across a town.")
	print("Do you want to go into the town or go back to the cottage?")
	print("1. Go into the town")
	print("2. Go back to the cottage")
	option = int(input("Choose an option: "))
	if option == 1:
		go_into_town()
	elif option == 2:
		go_back_to_cottage()

def go_back_to_cottage():
	print("\n" * 10)
	print("You go back to the cottage.")
	print("Do you want to go inside the cottage or leave the area?")
	print("1. Go inside the cottage")
	print("2. Leave the area")
	option = int(input("Choose an option: "))
	if option == 1:
		go_inside_cottage()
	elif option == 2:
		leave_area()

def follow_river():
	print("\n" * 10)
	print("You follow the river.")
	print("After a while, you come across a waterfall.")
	print("Do you want to go near the waterfall or go back to the cottage?")
	print("1. Go near the waterfall")
	print("2. Go back to the cottage")
	option = int(input("Choose an option: "))
	if option == 1:
		go_near_waterfall()
	elif option == 2:
		go_back_to_cottage()

def talk_to_old_man():
	print("\n" * 10)
	print("You talk to the old man.")
	print("He tells you about a hidden treasure in the forest.")
	print("Do you want to search for the treasure or leave the cottage?")
	print("1. Search for the treasure")
	print("2. Leave the cottage")
	option = int(input("Choose an option: "))
	if option == 1:
		search_for_treasure()
	elif option == 2:
		leave_cottage()

def leave_cottage():
	print("\n" * 10)
	print("You leave the cottage.")
	print("Do you want to go towards the light or explore the forest?")
	print("1. Go towards the light")
	print("2. Explore the forest")
	option = int(input("Choose an option: "))
	if option == 1:
		go_towards_light()
	elif option == 2:
		explore_forest()

def go_into_town():
	print("\n" * 10)
	print("You go into the town.")
	print("You see a market, a tavern, and a blacksmith.")
	print("Where do you want to go first?")
	print("1. Market")
	print("2. Tavern")
	print("3. Blacksmith")
	option = int(input("Choose an option: "))
	if option == 1:
		go_to_market()
	elif option == 2:
		go_to_tavern()
	elif option == 3:
		go_to_blacksmith()

def go_to_market():
	print("\n" * 10)
	print("You go to the market.")
	print("You see various stalls selling food, clothing, and weapons.")
	print("Do you want to buy something or leave the market?")
	print("1. Buy something")
	print("2. Leave the market")
	option = int(input("Choose an option: "))
	if option == 1:
		buy_something()
	elif option == 2:
		leave_market()

def go_to_tavern():
	print("\n" * 10)
	print("You go to the tavern.")
	print("You see various people drinking, playing games, and singing.")
	print("Do you want to drink, play a game, or leave the tavern?")
	print("1. Drink")
	print("2. Play a game")
	print("3. Leave the tavern")
	option = int(input("Choose an option: "))
	if option == 1:
		drink()
	elif option == 2:
		play_game()
	elif option == 3:
		leave_tavern()

def go_to_blacksmith():
