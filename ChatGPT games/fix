	print("2. Go to the marketplace")
	option = int(input("Choose an option: "))
	if option == 1:
		start_game()
	elif option == 2:
		go_to_marketplace()


def leave_area():
	print("\n" * 10)
	print("You leave the area.")
	print("Game Over")
	quit()

def go_near_waterfall():
	print("\n" * 10)
	print("You go near the waterfall.")
	print("You hear a strange noise coming from behind the waterfall.")
	print("Do you want to investigate the noise or go back to the cottage?")
	print("1. Investigate the noise")
	print("2. Go back to the cottage")
	option = int(input("Choose an option: "))
	if option == 1:
		investigate_noise()
	elif option == 2:
		go_back_to_cottage()

