	print("2. Go back to the cottage")
	option = int(input("Choose an option: "))
	if option == 1:
		open_chest()
	elif option == 2:
		go_back_to_cottage()

def open_chest():
	print("\n" * 10)
	print("You open the chest and find the hidden treasure!")
	print("Congratulations! You have found the treasure!")
