def investigate_noise():
	print("\n" * 10)
	print("You investigate the noise behind the waterfall.")
	print("What do you discover?")
	print("You discover a dog hiding behind the waterfall.")
	print("Do you want to pet the dog or leave?")
	print("1. Pet dog")
	print("2. Go back")
	option = int(input("Choose an option: "))
	if option == 1:
		pet_dog()
	elif option == 2:
		go_near_waterfall()

